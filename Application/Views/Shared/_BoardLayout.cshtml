<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/common.css">
        <link rel="stylesheet" href="~/css/board.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/bundle/site.min.css" asp-append-version="true" />
    </environment>


</head>

<body>
    <div class="container body-content">
        @RenderBody()
    </div>

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/fb-calendar.js" asp-append-version="true"></script>
        <script src="~/js/fb-message.js" asp-append-version="true"></script>
        <script src="~/js/fb-status.js" asp-append-version="true"></script>
        <script src="~/js/fb-clock.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/bundle/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>

</html>
